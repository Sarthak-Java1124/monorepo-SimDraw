generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  rooms Room[]
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  createdAt DateTime @default(now())
  adminId String
  admin User @relation(fields: [adminId] , references: [id])
  chats Chat[]
  }

model Chat {
  id      Int    @id @default(autoincrement())
  roomId  Int
  userId  String
  message String
  room  Room @relation(fields: [roomId] , references: [id])
}
